<%- include('../partials/header') %>

<body>
  <%- include('../partials/memberNavbar') %>
  <div class="container mt-4">
    <div class="card">
      <div class="card-body">
        <h1 class="card-title"><%= book.title %></h1>
        <p class="text-muted">By <%= book.authors %></p>
        <div class="row mt-4">
          <div class="col-md-8">
            <h5>Details</h5>
            <ul class="list-unstyled">
              <li><strong>Category:</strong> <%= book.category_name %></li>
              <li>
                <strong>Publication Date:</strong> <%= new
                Date(book.publication_date).toLocaleDateString() %>
              </li>
              <li>
                <strong>Available Copies:</strong> <%= book.available_copies %>
              </li>
            </ul>
          </div>
          <div class="col-md-4">
            <% if (book.available_copies > 0) { %>
            <form action="/member/book/<%= book.id %>/borrow" method="POST">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-book-reader me-2"></i>Borrow Book
              </button>
            </form>
            <% } else { %>
            <button class="btn btn-secondary btn-lg" disabled>
              Currently Unavailable
            </button>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-3">
      <a href="/member/catalog" class="btn btn-outline-primary">
        <i class="fas fa-arrow-left me-2"></i>Back to Catalog
      </a>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

<%- include('../partials/footer') %>
