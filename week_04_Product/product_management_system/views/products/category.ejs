<%- include('../partials/header') %>

<section class="min-h-[80vh]">
<div class="max-w-md mx-auto mt-10 bg-amber-600/20 p-6 rounded shadow-lg ">
  <p class="text-xl font-bold text-amber-800 text-center mb-4">Add a Category</p>
  <form action="/category/addCategory" method="post" class="space-y-4">
    <div>
      <label for="name" class="block text-sm font-medium text-amber-800 mb-1">Category Name</label>
      <input 
        type="text" 
        name="name" 
        placeholder="Enter category name" 
        required 
        class="w-full px-3 py-2 border border-amber-600 rounded shadow-sm focus:outline-none focus:ring focus:ring-amber-300"
      />
    </div>
    <div>
      <label for="description" class="block text-sm font-medium text-amber-800 mb-1">Category Description</label>
      <input 
        type="text" 
        name="description" 
        placeholder="Enter category description" 
        required 
        class="w-full px-3 py-2 border border-amber-600 rounded shadow-sm focus:outline-none focus:ring focus:ring-amber-300"
      />
    </div>
    <div>
      <button 
        type="submit" 
        class="w-full bg-amber-700 text-white px-4 py-2 rounded shadow-md hover:bg-amber-800 transition"
      >
        Submit
      </button>
    </div>
  </form>
</div>
</section>

<%- include('../partials/footer') %>
