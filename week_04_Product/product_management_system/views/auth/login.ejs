<%- include('../partials/header') %>
<div class="flex flex-col justify-center h-[90vh]">
  <div class="w-2/5 mx-auto border-2 border-slate-400 p-5 rounded-md">
  <p class="text-2xl capitalize text-center font-semibold text-slate-700 mb-5">Welcome back | Log in</p>

  <form action="/admin/login" method="POST">
    <input  class="mb-4 w-full border-[1.5px] border-gray-400 p-2 rounded-md" type="email" name="email" placeholder="Enter your email" required />
    <br />
    <input
    class="w-full border-[1.5px] border-gray-400 p-2 rounded-md"
      type="password"
      name="password"
      placeholder="Enter your password"
      required
    />

    <br />
    <button class="my-4 w-full bg-amber-500 text-white p-2 rounded-md" type="submit">Login</button>
    <div>
      <a href="/signup">Sign up</a>
    </div>
  </form>
</div>
</div>

<%- include('../partials/footer') %>
