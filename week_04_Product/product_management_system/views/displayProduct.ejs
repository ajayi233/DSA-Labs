<%- include('./partials/header') %>

<div class="container mx-auto mt-10 flex flex-wrap justify-center">
    <% if(product.length === 0) { %>
        <p class="w-full text-center">No products found under the products category</p>
    <% } %>
    <% product.forEach(item => { %>
        <div class="w-full md:w-1/2 xl:w-1/3 p-6">
            <div class="bg-white rounded shadow-md">
                <img src="/uploads/<%= item.imageUrl %>" alt="<%= item.name %>" class="w-full h-48">
                <div class="p-4">
                    <h2 class="text-2xl font-bold"><%= item.name %></h2>
                    <p class="text-gray-600"><%= item.description %></p>
                    <p class="text-gray-600 font-bold">Price: <%= item.price %></p>
                </div>
            </div>
        </div>
        <% }); %>
</div>

<%- include('./partials/footer') %>