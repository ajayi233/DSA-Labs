<%- include('../partials/header') %>

<nav>
  <ul>
    <li><a href="/users/admin/">Admin Dashboard</a></li>
  </ul>
</nav>

<form action="">
  <h1>Update a Book</h1>
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="<%= book.title %>" required />
  <br />
  <label for="genre">Genre:</label>
  <input type="number" id="genre" name="genre" value="<%= book.genreID %>" required />
  <br />
  <label for="authors">Authors:</label>
  <input type="text" id="author" name="authors" value="<%= book.author %>" required />
  <br />
  <label for="publisher">Publisher:</label>
  <input type="text" id="publisher" name="publisher" value="<%= book.publisher %>" required />
  <br />
  <label for="publicationDate">Publication Date:</label>
  <input type="number" id="publicationDate" name="publicationDate" value="<%= book.yearPublished %>" required />
  <br />
  <label for="availableCopies">Available Copies:</label>
  <input type="number" id="availableCopies" name="availableCopies" value="<%= book.copies %>" required />
  <br />
  <textarea name="description" id="description" cols="30" rows="5"> <%= book.description %></textarea>
  <input type="submit" value="Update Book" class="editBook--btn" />
</form>

<script src="/js/updateBookDom.js"></script>

<%- include('../partials/footer') %>
